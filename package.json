{
  "name": "nodejs-demo-app",
  "version": "1.0.0",
  "description": "Sample Node.js web app with CI/CD automation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'Build completed successfully'",
    "load-test": "node scripts/load-test.js",
    "security-audit": "npm audit",
    "docker:build": "docker build -t nodejs-demo-app .",
    "docker:run": "docker run -p 3000:3000 nodejs-demo-app"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
